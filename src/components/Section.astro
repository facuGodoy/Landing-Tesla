---
const { color, title, subtitle } = Astro.props;
const textColor = `text-${color}`;
---

<section class="landing-section bg-black h-screen w-screen text-center relative overflow-hidden"
data-header-color={ color }
>
  <div class="flex flex-col z-30 relative h-full">
    <header>
      <h2 class={`${textColor} pt-40 text-[40px] font-medium`}>
        {title}
      </h2>

    <p class={`${textColor} text-sm`}>
      {subtitle}
    </p>
    </header>

    <footer class="flex flex-col flex-grow flex-nowrap pb-20 justify-end">
        <slot name="footer"/>
    </footer>
  </div>

  <div class="absolute top-0 bottom-0 w-full h-full z-10">
    <slot name="background"/>
  </div>
</section>