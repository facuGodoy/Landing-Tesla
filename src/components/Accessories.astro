---
import Section from "./Section.astro";
---

<Section 
			title="Accesorios"
			subtitle=""
			color="black"
      id="accesorios"
      showFooterContent="true"
			>
      <div slot="footer" class="flex gap-x-4 mx-auto">
        <a class=" bg-black/75 backdrop-blur-sm rounded text-sm font-medium px-12 py-2 inline-block text-white hover:text-white hover:bg-black transition-colors" href="#">
          Comprar ahora
        </a>
      </div>

        <img 
        slot="background" 
        src="/accessories.avif"
        alt="Accesorios"
        class="w-full h-full object-cover object-center"
        id="bg-image-accessories"
        />
      
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true
    } else {
      return false
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-accessories"
  ) as HTMLImageElement

  if (isEdge()) {
    imageElement.src = "accessories.webp"
  } else {
    imageElement.src = "accessories.avif"
  }
</script>