---
import Section from "./Section.astro";
---

<Section 
    title="Solar y Powerwall"
    subtitle="Energía para todos"
    color="black"
    id="powerwall"
			>
      <div slot="footer" class="flex gap-x-4 mx-auto">
        <a class=" bg-black/75 backdrop-blur-sm rounded text-sm font-medium px-12 py-2 inline-block text-white hover:text-white hover:bg-black transition-colors" href="#">
          Saber más
        </a>
      </div>

        <img 
        slot="background" 
        src="/powerwall.avif"
        alt="Solar y Powerwall"
        class="w-full h-full object-cover object-center"
        id="bg-image-powerwall"/>
      
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true
    } else {
      return false
    }
  }

  let imageElement = document.querySelector(
    "#bg-image-powerwall"
  ) as HTMLImageElement

  if (isEdge()) {
    imageElement.src = "powerwall.webp"
  } else {
    imageElement.src = "powerwall.avif"
  }
</script>