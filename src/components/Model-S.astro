---
import Section from "./Section.astro";
---

<Section 
			title="Model S" 
			subtitle="Programe una consulta virtual"
			color="black"
      id="model-s"
			>
      <div slot="footer" class="flex gap-x-4 mx-auto">
        <a class=" bg-black/75 backdrop-blur-sm rounded text-sm font-medium px-12 py-2 inline-block text-white hover:text-white hover:bg-black transition-colors" href="#">
          Pedido personalizado
        </a>
        <a class="bg-white rounded text-sm font-medium px-12 py-2 inline-flex justify-center items-center text-black hover:text-white hover:bg-black transition-colors" href="#">
          Saber m√°s
        </a>
      </div>

        <img 
        slot="background" 
        src="/model-s.avif" 
        alt="Tesla Model S" 
        class="w-full h-full object-cover object-center"
        id="bg-image-models"
        />
      
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  let imageElement = document.querySelector("#bg-image-models") as HTMLImageElement; // TypeScript

  if (isEdge()) {
    imageElement.src = "model-s.webp";
  } else {
    imageElement.src = "model-s.avif";
  }
</script>